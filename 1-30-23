string s1 = new String ("Grace Hopper");
String s2 = "CU L8R";
String s3 = ":)"

System.out,println(s1.toLowerCase()); // grace hopper
System.out.println(s1.length());//12
System.out.println(s2.length);//6
System.out.println(s2.equals(s3);//false
System.out.println(s2.equals("CU L8R");//true
System.out.println(s2.charAt(1));//U
System.out.println(s1.substring(7,11));//oppe
System.out.println(s2.substring(0,2));//cu




